#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/packages/ui/node_modules/jiti/lib/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/packages/ui/node_modules/jiti/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/packages/ui/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/packages/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/node_modules:/Users/deveshwarzard/Desktop/projects/node_modules:/Users/deveshwarzard/Desktop/node_modules:/Users/deveshwarzard/node_modules:/Users/node_modules:/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/packages/ui/node_modules/jiti/lib/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/packages/ui/node_modules/jiti/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/packages/ui/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/packages/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/node_modules:/Users/deveshwarzard/Desktop/projects/node_modules:/Users/deveshwarzard/Desktop/node_modules:/Users/deveshwarzard/node_modules:/Users/node_modules:/node_modules:/Users/deveshwarzard/Desktop/projects/shadcn-kanban-monorepo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../jiti/lib/jiti-cli.mjs" "$@"
else
  exec node  "$basedir/../jiti/lib/jiti-cli.mjs" "$@"
fi
